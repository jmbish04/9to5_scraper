{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "module": "ES2022",
    "target": "ES2022",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "sourceMap": true,
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@job-scraper/shared": ["../shared/src"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["dist"],
  "references": [{ "path": "../shared" }]
}
