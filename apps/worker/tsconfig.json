{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "module": "ES2022",
    "target": "ES2022",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@job-scraper/shared": ["../../packages/shared/src"],
      "@job-scraper/cf-ai": ["../../packages/cf-ai/src"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["dist"],
  "references": [
    { "path": "../../packages/shared" },
    { "path": "../../packages/cf-ai" }
  ]
}
